<!DOCTYPE html>
<html lang="pt">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- The page supports both light and dark color schemes, with light being default -->
    <meta name="color-scheme" content="light dark">

    <!-- Bootstrap CSS (as per normal) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add the Bootstrap-Nightfall Variant CSS (the media attribute is for dark auto-switching) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-nightfall.min.css"
        rel="stylesheet" media="(prefers-color-scheme: dark)">

    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <title>@ViewData["Title"] - SupplyChain</title>

    <!-- Optional Meta Theme Color is also supported on Safari and Chrome -->
    <meta name="theme-color" content="#111111" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="#eeeeee" media="(prefers-color-scheme: dark)">

    <!-- Custom CSS -->
    <style>
        /* Adicionar padding ao conteúdo principal para evitar que seja oculto pelo navbar */
        .main-content {
            padding-top: 70px; /* Defina a altura do navbar + espaço adicional */
        }

        /* Fixar o Footer na base da página */
        .fixed-footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #9e9e9e; /* Cor de fundo cinza (#9e9e9e) */
            padding: 10px 0;
            text-align: center;
            color: black; /* Font color for the footer text (cor preta) */
            z-index: 1000; /* Colocar o footer acima dos outros elementos */
        }

        /* Alinhar os hyperlinks do footer lado a lado */
        .fixed-footer a {
            margin-left: 10px;
            color: black; /* Font color for the footer hyperlinks (cor preta) */
        }

        /* Imagem de Fundo com Transparência */
        body {
            background-image: url('/images/artbreeder-image-2x.png');
            background-color: rgba(0, 0, 0, 0.7); /* 70% de transparência (0.7) na cor preta */
            background-blend-mode: multiply; /* Blend mode para mesclar a imagem de fundo com a cor */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand" href="#">
                    <img src="/images/logo.png" alt="Logo" style="max-height: 40px;">
                </a>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-2">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Mercadoria"
                                asp-action="Index">Mercadorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Entrada"
                                asp-action="CadastroEntrada">Entrada Mercadoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Saida"
                                asp-action="CadastroSaida">Saída Mercadoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="Index">Relatório Gráfico</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Fixed Footer -->
    <footer class="fixed-footer">
        Desenvolvido por Philipp Douglas 2023 - Contato:
        <a href="https://www.linkedin.com/in/philipp-douglas-0256b6206/" target="_blank"><i class="fab fa-linkedin"></i></a>
        <a href="https://github.com/philippdouglas" target="_blank"><i class="fab fa-github"></i></a>
    </footer>

    @RenderSection("Scripts", required: false) <!-- Esta linha renderiza a seção "Scripts" -->

    <!-- Font Awesome JavaScript (Optional, if you want to use JavaScript features from Font Awesome) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4Ck+OGp5nPfOuH5hz5wXW+OrS2UCV8jNM0l9tq"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"
        integrity="sha512-tN8Md0/VSXuMgqgr0qiIAwq6/8NCbjp6aZReTZ66zUzDB/akO5k6uXLEJGeIqOF7L57GrkN6lHkwJmjn9mZBQ=="
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-oVWP46qAJ8GDgDIKjkG6Dbw+yPvPVL5x30e3c4g/BLE=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyGrqjHLVQpVlFUDZBtUK7MphYz0zflAZb"
        crossorigin="anonymous"></script>
</body>
</html>
