@{
    ViewData["Title"] = "Supply Chain";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        
        body {
            font-family: Arial, sans-serif;
        }
        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
        }
        main {
            margin: 20px;
            display: flex;
            justify-content: space-between;
        }
        section {
            width: 50%;
            padding: 20px;
            background-color: transparent; 
            border-radius: 5px;
        }
        .login-form,
        .register-form {
            padding: 20px;
            background-color: transparent;
            box-shadow: none;
        }
        .login-form h3,
        .register-form h3 {
            margin-top: 0;
        }
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: none;
            border-radius: 3px;
            background-color: rgba(255, 255, 255, 0.2);
        }
        .btn {
            background-color: #2f4d6c;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>
<body>
       
    <main>
        <section>
            <h2 style="background-color: transparent;">Bem-vindo ao sistema de Gerenciamento de Mercadorias!</h2>
            <p style="background-color: transparent;">Este sistema permite o cadastro de mercadorias, registro de entradas e saídas, além de gerar relatórios e gráficos para análise.</p>
        </section>
    </main>
    
    <aside>
        <div class="login-form">
            <h3>Login</h3>
            <form action="/Usuario/Login" method="post">
                <input type="text" name="Login" placeholder="Login" required>
                <input type="password" name="Senha" placeholder="Senha" required>
                <button class="btn" type="submit">Logar</button>
            </form>
        </div>
        
        <div class="register-form">
            <h3>Cadastro</h3>
            <form action="/Usuario/Cadastrar" method="post">
                <input type="text" name="Nome" placeholder="Nome" required>
                <input type="text" name="Matricula" placeholder="Matrícula" required>
                <input type="text" name="Login" placeholder="Login" required>
                <input type="password" name="Senha" placeholder="Senha" required>
                <button class="btn" type="submit">Cadastrar</button>
            </form>
        </div>
    </aside>
</body>
</html>
