@{
    ViewData["Title"] = "Excluir Mercadoria";
}

<h1>@ViewData["Title"]</h1>
<h3>Tem certeza que deseja excluir esta mercadoria?</h3>
<div>
    <h4>Mercadoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Número de Registro</dt>
        <dd class="col-sm-10">@Model.NumeroRegistro</dd>
        <dt class="col-sm-2">Fabricante</dt>
        <dd class="col-sm-10">@Model.Fabricante</dd>
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-actions">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
