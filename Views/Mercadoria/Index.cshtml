@{
    ViewData["Title"] = "Gerenciamento";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">+ Cadastrar Mercadoria</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Número de Registro</th>
            <th>Fabricante</th>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Estoque</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mercadoria in Model)
        {
            <tr>
                <td>@mercadoria.Id</td>
                <td>@mercadoria.Nome</td>
                <td>@mercadoria.NumeroRegistro</td>
                <td>@mercadoria.Fabricante</td>
                <td>@mercadoria.Tipo</td>
                <td>@mercadoria.Descricao</td>
                <td>@mercadoria.Estoque</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Editar e Excluir">
                        <a asp-action="Edit" asp-route-id="@mercadoria.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@mercadoria.Id" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
