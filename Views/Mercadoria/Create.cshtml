@model Mercadoria

@{
    ViewData["Title"] = "Adicionar Mercadoria";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroRegistro" class="control-label"></label>
                <input asp-for="NumeroRegistro" class="form-control" pattern="[0-9]+" title="O campo 'NumeroRegistro' deve conter apenas números." required />
                <span asp-validation-for="NumeroRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" required />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" required />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" required />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-oVWP46qAJ8GDgDIKjkG6Dbw+yPvPVL5x30e3c4g/BLE=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            // Seleciona o formulário pelo ID
            var form = $("#createForm");

            // Adiciona o evento 'submit' no formulário
            form.on("submit", function (event) {
                // Validação para o campo 'Nome'
                var nomeInput = $("#Nome");
                if (nomeInput.val().trim() === "") {
                    alert("O campo 'Nome' não pode ser deixado em branco.");
                    nomeInput.focus();
                    event.preventDefault();
                    return false;
                }

            // Validação para o campo 'NumeroRegistro'
            var numeroRegistroInput = $("#NumeroRegistro");
            if (!/^[0-9]+$/.test(numeroRegistroInput.val())) {
                alert("O campo 'Numero Registro' deve conter apenas números.");
                numeroRegistroInput.focus();
                event.preventDefault();
                return false;
            }

                // Validação para o campo 'Fabricante'
                var fabricanteInput = $("#Fabricante");
                if (fabricanteInput.val().trim() === "") {
                    alert("O campo 'Fabricante' não pode ser deixado em branco.");
                    fabricanteInput.focus();
                    event.preventDefault();
                    return false;
                }

                // Validação para o campo 'Tipo'
                var tipoInput = $("#Tipo");
                if (tipoInput.val().trim() === "") {
                    alert("O campo 'Tipo' não pode ser deixado em branco.");
                    tipoInput.focus();
                    event.preventDefault();
                    return false;
                }

                // Validação para o campo 'Descricao'
                var descricaoInput = $("#Descricao");
                if (descricaoInput.val().trim() === "") {
                    alert("O campo 'Descricao' não pode ser deixado em branco.");
                    descricaoInput.focus();
                    event.preventDefault();
                    return false;
                }
            });
        });
    </script>
}

